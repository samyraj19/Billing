<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="KBilling.MainView">
	<UserControl.Styles>
		<Style Selector="Button">
			<Setter Property="Background" Value="#2b7fff"/>
			<Setter Property="Foreground" Value="White"/>
			<Setter Property="Width" Value="100"/>
			<Setter Property="Height" Value="30"/>
			<Setter Property="Margin" Value="2"/>
			<Setter Property="VerticalContentAlignment" Value="Center"/>
			<Setter Property="HorizontalContentAlignment" Value="Center"/>
		</Style>
		<Style Selector="DataGrid">
			<Setter Property="Background" Value="White"/>
			<Setter Property="BorderBrush" Value="Gray"/>
			<Setter Property="BorderThickness" Value="1"/>
			<Setter Property="GridLinesVisibility" Value="All"/>
			<Setter Property="ColumnWidth" Value="*"/>
			<Setter Property="AutoGenerateColumns" Value="False"/>
			<Setter Property="CornerRadius" Value="2"/>
		</Style>
	</UserControl.Styles>
	<Grid x:Name="MainPanel" ColumnDefinitions="8* 98*">
		<Border Grid.Row="0" BorderThickness="0,0,2,0" BorderBrush="LightGray">
			<Grid RowDefinitions="5* 95*" Background="White">
				<Grid Grid.Row="0" Background="Transparent">
					<Label Content="Fancy Store"/>
				</Grid>
				<StackPanel Grid.Row="1"
						Orientation="Vertical"
							HorizontalAlignment="Center">
					<Button x:Name="BtnDashboard" Content="DashBoard"/>
					<Button x:Name="BtnProduct" Content="Products"/>
					<Button x:Name="BtnPricing" Content="Pricing"/>
					<Button x:Name="BtnStock" Content="Stocks"/>
				</StackPanel>
			</Grid>
		</Border>


		<Grid Grid.Column="1" RowDefinitions="5* 95*">
			<Border BorderBrush="LightGray" BorderThickness="0,0,0,1" Background="#FFFFFF">
				<Grid Grid.Row="0">
					<Label Content="DashBoard" Margin="5,0,0,0"
						   VerticalContentAlignment="Center"
						   FontSize="16" FontWeight="Regular"/>
				</Grid>
			</Border>

			<ContentControl Grid.Row="1" x:Name="ContentPanel" Background="#f9f9f9"/>
		</Grid>
	</Grid>
</UserControl>
