<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
			 Background="#f6f8f9"
			 xmlns:vm="using:KBilling.ViewModel"
			 x:DataType="vm:BillDetailsVM"
             x:Class="KBilling.BillingView">
	<UserControl.DataContext>
		<vm:BillDetailsVM/>
	</UserControl.DataContext>
	<UserControl.Styles>
		<Style Selector="Border">
			<Setter Property="BorderBrush" Value="LightGray"/>
			<Setter Property="CornerRadius" Value="0"/>
		</Style>
		<Style Selector="Label.h1">
			<Setter Property="FontSize" Value="18"/>
			<Setter Property="FontWeight" Value="SemiBold"/>
			<Setter Property="Foreground" Value="Black"/>
			<Setter Property="Margin" Value="0,5"/>
			<Setter Property="VerticalContentAlignment" Value="Center"/>
		</Style>
		<Style Selector="Label.h2">
			<Setter Property="FontSize" Value="18"/>
			<Setter Property="FontWeight" Value="SemiBold"/>
			<Setter Property="Foreground" Value="Black"/>
			<Setter Property="Margin" Value="0,5"/>
			<Setter Property="VerticalContentAlignment" Value="Center"/>
		</Style>
		<Style Selector="TextBlock">
			<Setter Property="FontSize" Value="18"/>
			<Setter Property="FontWeight" Value="SemiBold"/>
			<Setter Property="Margin" Value="0,5"/>
			<Setter Property="VerticalAlignment" Value="Center"/>
		</Style>
	</UserControl.Styles>

	<Grid ColumnDefinitions="80* 20*">
		<Grid Grid.Column="0" RowDefinitions="10* 80* 10*">
			<StackPanel Orientation="Horizontal">
				<TextBox x:Name="txtSearch"
						 Width="400" Height="40"
						 Margin="5"
						 HorizontalAlignment="Left"
						 VerticalContentAlignment="Center"
						 Watermark="Search by Product Name or Number"/>
				<TextBox x:Name="TextBoxQuanityt"
						 Margin="5"
						 Width="100" Height="40"/>
			</StackPanel>

			<DataGrid  x:Name="DataGridProduct" Grid.Row="0"
					   Margin="5" ColumnWidth="*">

			</DataGrid>
			<StackPanel Grid.Row="2" Orientation="Horizontal"
						HorizontalAlignment="Right">
			</StackPanel>
		</Grid>

		<Grid Grid.Column="1" RowDefinitions="* *">
			<HeaderedContentControl Grid.Row="0" Margin="0,5,5,5"
									Background="White"
									Header="Bill Details">
				<Grid RowDefinitions="* * .5*" ColumnDefinitions="* *">
					<Label Grid.Row="0" Grid.Column="0" 
						   Classes="h1"
						   Content="Sub Total"/>
					<Label Grid.Row="1" Grid.Column="0"
						   Classes="h1"
						   Content="Discount"/>
				    <TextBlock Grid.Row="0" Grid.Column="1"
							   HorizontalAlignment="Right"
							   Text="Rs.500"/>
					<TextBlock Grid.Row="1" Grid.Column="1"
							   HorizontalAlignment="Right"
							   Text="- Rs.50"/>

					<Border Grid.Row="2" Grid.ColumnSpan="2"
							Margin="-8"
							Background="#e6f8e9">
						<Grid ColumnDefinitions="* *">
							<Label Grid.Column="0" 
								   Content="Total Amount"  
								   Classes="h2"/>
							<TextBlock Grid.Column="1" 
									   Text="Rs.4500" 
									   HorizontalAlignment="Right"
									   Margin="0,0,5,0"/>
						</Grid>
					</Border>
					
				</Grid>
			</HeaderedContentControl>

			<HeaderedContentControl Grid.Row="1" Margin="0,10,5,5"
									Header="Payment Details">
				
			</HeaderedContentControl>
		</Grid>

	</Grid>

</UserControl>
