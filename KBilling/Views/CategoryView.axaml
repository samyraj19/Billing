<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
			 xmlns:vm="using:KBilling.ViewModel"
			 x:DataType="vm:CategoryVM"
			 xmlns:CustomContrl="using:KBilling.Controls"
             x:Class="KBilling.CategoryView">
	<UserControl.DataContext>
		<vm:CategoryVM/>
	</UserControl.DataContext>
	<UserControl.Styles>
		<Style Selector="TextBox">
			<Setter Property="Width" Value="200"/>
			<Setter Property="Height" Value="30"/>
			<Setter Property="HorizontalAlignment" Value="Left"/>
			<Setter Property="Focusable" Value="True"/>
		</Style>
		<Style Selector="Label">
			<Setter Property="Margin" Value="0,4"/>
		</Style>
		<Style Selector="ComboBox">
			<Setter Property="Width" Value="200"/>
			<Setter Property="Height" Value="30"/>
		</Style>
	</UserControl.Styles>
	<Grid RowDefinitions="Auto Auto">
		<Border Background="White" Grid.Row="0"
				Padding="5"
				CornerRadius="5" Margin="15">
			<Grid x:Name="MainPanel" RowDefinitions="* * * * *" ColumnDefinitions="20* 20* 20* 40*">
				<Label Grid.Row="0" Grid.Column="0" Content="Name *"/>
				<Label Grid.Row="0" Grid.Column="1" Content="Prefix *"/>
				<Label Grid.Row="0" Grid.Column="2" Content="Code *"/>
				<Label Grid.Row="0" Grid.Column="3" Content="Description *"/>

				<TextBox Grid.Row="1" Grid.Column="0" x:Name="TextName"
						 Text="{Binding Name,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}"/>
				<TextBox Grid.Row="1" Grid.Column="1"
						 Text="{Binding Prefix,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}"/>
				<TextBox Grid.Row="1" Grid.Column="2"
						 Text="{Binding Code,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}"/>
				<TextBox Grid.Row="1" Grid.Column="3"
						 Text="{Binding Description,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}"/>

				<Button Grid.Row="4" x:Name="BtnSubmit"
						Grid.ColumnSpan="3" Content="Submit"
						Margin="5,20,5,5"
						Width="200" Height="40"
						VerticalContentAlignment="Center" HorizontalContentAlignment="Center"
						HorizontalAlignment="Center"/>

				<Button Grid.Row="4" x:Name="BtnCancel"
						Grid.ColumnSpan="3" Content="Cancel"
						Margin="500,20,5,5"
						Width="200" Height="40"
						VerticalContentAlignment="Center" HorizontalContentAlignment="Center"
						HorizontalAlignment="Center"/>

			</Grid>
		</Border>

		<Grid Grid.Row="1" RowDefinitions="Auto *" Margin="10">
			<StackPanel Orientation="Horizontal" Margin="0,5">
				<TextBox x:Name="SearchTxt" Width="400"
						 Watermark="Search Item name/number"/>
				<Label Content="Sort By"
					   FontWeight="SemiLight"
					   VerticalContentAlignment="Center"
					   Margin="15,5"/>
				<ComboBox x:Name="SortByCmb"
						  SelectedIndex="0"
						  Width="75"
						  Margin="5,5"/>

			</StackPanel>
			<DataGrid Grid.Row="1"
					  x:Name="DGCategory"
					  ColumnWidth="*"
					  ScrollViewer.VerticalScrollBarVisibility="Auto"
					  ItemsSource="{Binding FilterCategories}">
				<DataGrid.Columns>
					<DataGridTextColumn IsVisible="False"
										Binding="{Binding CategoryId}"/>
					<DataGridTextColumn IsReadOnly="True" Header="#" Width="75"
										Binding="{Binding No}"/>
					<DataGridTextColumn Header="Name" IsReadOnly="True"
										Binding="{Binding Name}"/>
					<DataGridTextColumn Header="Prefix" IsReadOnly="True"
										Binding="{Binding Prefix}"/>
					<DataGridTextColumn Header="Code" IsReadOnly="True"
										Binding="{Binding Code}"/>
					<DataGridTextColumn Header="Description" IsReadOnly="True"
										Binding="{Binding Description}"/>
					<DataGridTemplateColumn Header="Action" Width="100">
						<DataGridTemplateColumn.CellTemplate>
							<DataTemplate>
								<StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
									<CustomContrl:IconButton Width="25" Height="25"
															 Tag="Delete"
															 Icon="avares://KBilling/Assets/delete.png"
															 Click="OnActionClick"/>
									<CustomContrl:IconButton Width="25" Height="25"
															 Tag="Edit"
															 Click="OnActionClick"
															 Icon="avares://KBilling/Assets/edit.png"/>
								</StackPanel>
							</DataTemplate>
						</DataGridTemplateColumn.CellTemplate>
					</DataGridTemplateColumn>
				</DataGrid.Columns>
			</DataGrid>
		</Grid>

	</Grid>
</UserControl>
