<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
			 Background="#f6f8f9"
			 xmlns:vm="using:KBilling.ViewModel"
			 x:DataType="vm:ProductVM"
			 xmlns:CustomContrl="using:KBilling.Controls"
             x:Class="KBilling.AddProducts">
	<UserControl.DataContext>
		<vm:ProductVM/>
	</UserControl.DataContext>
	<UserControl.Styles>
		<Style Selector="TextBox">
			<Setter Property="Width" Value="200"/>
			<Setter Property="Height" Value="30"/>
			<Setter Property="HorizontalAlignment" Value="Left"/>
			<Setter Property="Focusable" Value="True"/>
		</Style>
		<Style Selector="Label">
			<Setter Property="Margin" Value="0,4"/>
		</Style>
		<Style Selector="ComboBox">
			<Setter Property="Width" Value="200"/>
			<Setter Property="Height" Value="30"/>
		</Style>
	</UserControl.Styles>
	<Grid RowDefinitions="Auto Auto">
		<Border Background="White" Grid.Row="0"
				Padding="5"
				CornerRadius="5" Margin="15">
			<Grid x:Name="MainPanel" RowDefinitions="* * * * *" ColumnDefinitions="20* 20* 20* 20* 20*">
				<Label Grid.Row="0" Grid.Column="0" Content="Item Name *"/>
				<Label Grid.Row="0" Grid.Column="1" Content="Item Code *"/>
				<Label Grid.Row="0" Grid.Column="2" Content="Purchase Rate *"/>
				<Label Grid.Row="0" Grid.Column="3" Content="Selling Rate *"/>
				<Label Grid.Row="0" Grid.Column="4" Content="Quantity *"/>
				
				<TextBox Grid.Row="1" Grid.Column="0"
						 x:Name="txtName"
						 IsReadOnly="True"
						 Text="{Binding ProductName,Mode=TwoWay}"/>
				<TextBox Grid.Row="1" Grid.Column="1"
						 x:Name="textCode"
						 Text="{Binding ProductNumber,Mode=TwoWay}"/>
				<TextBox x:Name="txtPurRate"
						 Grid.Row="1" Grid.Column="2"
						 IsEnabled="{Binding Role, Converter={StaticResource AdminOnly}}"
						 Text="{Binding PurchaseRate,Mode=TwoWay}"/>
				<TextBox x:Name="txtSellRate"
						 Grid.Row="1" Grid.Column="3"
						 IsEnabled="{Binding Role, Converter={StaticResource AdminOnly}}"
						 Text="{Binding SellingRate,Mode=TwoWay}"/>
				<TextBox x:Name="txtQty"
						 Grid.Row="1" Grid.Column="4"
						 Text="{Binding Quantity,Mode=TwoWay}"/>

				<Button Grid.Row="4" x:Name="BtnSubmit"
						Grid.ColumnSpan="3" Content="Submit"
						Margin="5,20,5,5"
						Width="200" Height="40"
						VerticalContentAlignment="Center" HorizontalContentAlignment="Center"
						HorizontalAlignment="Center"/>

				<Button Grid.Row="4" x:Name="BtnCancel"
						Grid.ColumnSpan="3" Content="Cancel"
						Margin="500,20,5,5"
						Width="200" Height="40"
						VerticalContentAlignment="Center" HorizontalContentAlignment="Center"
						HorizontalAlignment="Center"/>

			</Grid>
		</Border>

		<Grid Grid.Row="1" RowDefinitions="10* 90*" Margin="10">
			<StackPanel Orientation="Horizontal" Margin="0,5">
				<TextBox x:Name="SearchTxt" Width="400"
						 Watermark="Search Item name/number"/>
			</StackPanel>
			<DataGrid Grid.Row="1" x:Name="DataGridProduct"
					  ColumnWidth="*"
					  ItemsSource="{Binding FilterProducts}">
				<DataGrid.Columns>
					<DataGridTextColumn IsReadOnly="True" Header="#"
										Width="75"
										Binding="{Binding No}"/>
					<DataGridTextColumn Header="Name" IsReadOnly="True"
										Binding="{Binding ProductName}"/>
					<DataGridTextColumn Header="Number" IsReadOnly="True"
										Binding="{Binding ProductNumber}"/>
					<DataGridTextColumn Header="Quantity" IsReadOnly="True"
										Binding="{Binding Quantity}"/>
					<DataGridTextColumn Header="Status" IsReadOnly="True"
										Binding="{Binding Status}"/>
					<DataGridTextColumn Header="Created By" IsReadOnly="True"
										Binding="{Binding Createdby}"/>
					<DataGridTextColumn Header="Created Date" IsReadOnly="True"
										Binding="{Binding Createddate}"/>
					<DataGridTemplateColumn Header="Action" Width="100">
						<DataGridTemplateColumn.CellTemplate>
							<DataTemplate>
								<StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
									<CustomContrl:IconButton Width="25" Height="25" 
															 Tag="Delete"
															 Click="OnIconButtonClick"
															 Icon="avares://KBilling/Assets/delete.png"/>
									<CustomContrl:IconButton Width="25" Height="25" 
															 Tag="Edit"
															 Click="OnIconButtonClick"
															 Icon="avares://KBilling/Assets/edit.png"/>
								</StackPanel>
							</DataTemplate>
						</DataGridTemplateColumn.CellTemplate>
					</DataGridTemplateColumn>
				</DataGrid.Columns>
			</DataGrid>
		</Grid>

	</Grid>

</UserControl>
