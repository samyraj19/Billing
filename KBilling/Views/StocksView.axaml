<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
			 xmlns:vm="using:KBilling.ViewModel"
			 x:DataType="vm:StockVM"
             x:Class="KBilling.StocksView">
	<UserControl.DataContext>
		<vm:StockVM/>
	</UserControl.DataContext>
	<Grid RowDefinitions="5* 85* 10*">
		<StackPanel Orientation="Horizontal" Margin="5">
			<TextBox Grid.Row="0" 
					 x:Name="SearchTxt" 
					 Width="500"
					 CornerRadius="5"
					 Watermark="Search Item Name/Code"/>
		</StackPanel>
		
		<DataGrid x:Name="DataGridStock" Grid.Row="1"
				  Margin="5" ColumnWidth="*"
				  ItemsSource="{Binding FilterProducts}">
			<DataGrid.Columns>
				<DataGridTextColumn IsReadOnly="True" Header="#"
									Width="60"
									Binding="{Binding No}"/>
				<DataGridTextColumn Header="Name" IsReadOnly="True"
									Binding="{Binding ProductName}"/>
				<DataGridTextColumn Header="Number" IsReadOnly="True"
									Binding="{Binding ProductNumber}"/>
				<DataGridTextColumn Header="Quantity" 
									Binding="{Binding Quantity}"/>
				<DataGridTextColumn Header="Selling ate" IsReadOnly="True"
									Binding="{Binding SellingRate}"/>
				<DataGridTextColumn Header="Status" IsReadOnly="True"
									Binding="{Binding Status}"/>
				<DataGridTextColumn Header="Level" IsReadOnly="True"
									Binding="{Binding Stocklevel}"/>
			</DataGrid.Columns>
		</DataGrid>

		<Button x:Name="BtnUpdatestock"
				Grid.Row="2"
				Content="Stock Update"
				Width="200"
				Height="45"
				CornerRadius="5"
				HorizontalAlignment="Center"
				Margin="5"
				VerticalContentAlignment="Center"
				HorizontalContentAlignment="Center"/>
	</Grid>
</UserControl>
