<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
			 Background="#f6f8f9"
			 xmlns:vm="using:KBilling.ViewModel"
			 x:DataType="vm:UpdatePricingVM"
             x:Class="KBilling.PriceUpdateView">
	<UserControl.DataContext>
		<vm:UpdatePricingVM/>
	</UserControl.DataContext>

	<UserControl.KeyBindings>
		<KeyBinding Gesture="Enter" Command="{Binding UpdateCommand}"/>
	</UserControl.KeyBindings>

	<Grid RowDefinitions="5* 88* 7*">
		<TextBox Grid.Row="0"
				 x:Name="SearchTxt"
				 HorizontalAlignment="Left"
				 Width="500" Height="30"
				 Margin="5,4,2,2"
				 CornerRadius="2"
				 Watermark="Search Item Name/Code"
				 Text="{Binding SearchText}"/>

		<DataGrid x:Name="DataGridProduct" Grid.Row="1"
				  Margin="5"
			      ColumnWidth="*"
				  ItemsSource="{Binding FilterProducts}">
			<DataGrid.Columns>
				<DataGridTextColumn IsReadOnly="True" Header="#" Width="60" Binding="{Binding No}"/>
				<DataGridTextColumn Header="Name" IsReadOnly="True" Binding="{Binding ProductName}"/>
				<DataGridTextColumn Header="Number" IsReadOnly="True" Binding="{Binding ProductNumber}"/>
				<DataGridTextColumn Header="Purchase Rate" Binding="{Binding PurchaseRate}"/>
				<DataGridTextColumn Header="Selling Rate" Binding="{Binding SellingRate}"/>
				<DataGridTextColumn Header="Quantity" IsReadOnly="True" Binding="{Binding Quantity}"/>
				<DataGridTextColumn Header="Created By" IsReadOnly="True" Binding="{Binding Createdby}"/>
				<DataGridTextColumn Header="Created Date" IsReadOnly="True" Width="175" Binding="{Binding Createddate}"/>
			</DataGrid.Columns>
		</DataGrid>

		<Button x:Name="BtnUpdatePrices"
				Grid.Row="2"
				Content="Update"
				Width="175" Height="40"
				Margin="5"
				HorizontalAlignment="Center"
				Classes="Primary"
				Command="{Binding UpdateCommand}"/>
	</Grid>

</UserControl>
